<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.delivered.android.showcase">

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name="im.delivered.android.showcase.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/DeliveredTheme.App">

        <activity
            android:name="im.delivered.android.showcase.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/DeliveredTheme.App.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/chats_list_searchable" />
        </activity>

        <activity
            android:name="im.delivered.android.showcase.LoginActivity"
            android:theme="@style/DeliveredTheme.App.TransparentStatusBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="im.delivered.android.showcase.RegistrationActivity"
            android:theme="@style/DeliveredTheme.App.TransparentStatusBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="im.delivered.android.showcase.conversation.ConversationActivity"
            android:theme="@style/DeliveredTheme.App.NoActionBar" />

        <activity
            android:name="im.delivered.android.showcase.settings.SettingsActivity"
            android:theme="@style/DeliveredTheme.App.NoActionBar" />

        <activity
            android:name="im.delivered.android.showcase.settings.RegisteredDevicesActivity"
            android:theme="@style/DeliveredTheme.App.NoActionBar" />

        <service
            android:name="im.delivered.android.showcase.AuthenticationService"
            android:exported="false" />

        <service android:name="im.delivered.android.showcase.fcm.SampleFcmService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name="im.delivered.android.showcase.fcm.SampleFcmIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>