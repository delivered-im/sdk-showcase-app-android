<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Delivered.Light" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="ResourceName">
        <item name="customAppTheme">@style/Theme.Delivered.Light</item>
