        <item name="actionModeCloseButtonStyle">@style/Widget.Delivered.ActionModeBackButton</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:typeface">normal</item>

        <!-- General App widgets -->
        <item name="deliveredToolbarStyle">@style/Widget.Delivered.Toolbar</item>
